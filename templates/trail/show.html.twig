    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trail.name }}</td>
            </tr>
            <tr>
                <th>Distance</th>
