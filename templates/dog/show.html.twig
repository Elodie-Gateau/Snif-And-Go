{% extends 'base.html.twig' %}

{% block title %}Dog{% endblock %}

{% block body %}
    <h1>Dog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dog.name }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ dog.birthDate ? dog.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ dog.sex }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ dog.breed }}</td>
            </tr>
            <tr>
                <th>Identity_number</th>
                <td>{{ dog.identityNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dog_index') }}">back to list</a>

    <a href="{{ path('app_dog_edit', {'id': dog.id}) }}">edit</a>

    {{ include('dog/_delete_form.html.twig') }}
{% endblock %}
