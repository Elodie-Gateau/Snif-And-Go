{% extends 'base.html.twig' %}

{% block title %}Dog index{% endblock %}

{% block body %}
    <h1>Dog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birth_date</th>
                <th>Sex</th>
                <th>Breed</th>
                <th>Identity_number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dog in dogs %}
            <tr>
                <td>{{ dog.id }}</td>
                <td>{{ dog.name }}</td>
                <td>{{ dog.birthDate ? dog.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ dog.sex }}</td>
                <td>{{ dog.breed }}</td>
                <td>{{ dog.identityNumber }}</td>
                <td>
                    <a href="{{ path('app_dog_show', {'id': dog.id}) }}">show</a>
                    <a href="{{ path('app_dog_edit', {'id': dog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dog_new') }}">Create new</a>
{% endblock %}
